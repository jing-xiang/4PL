@page "/Admin/AddAccount"

@using System.ComponentModel.DataAnnotations
@using _4PL.Data

@inject ILogger<AddAccount> Logger
@inject IConfiguration Configuration
@inject HttpClient HttpClient

<PageTitle>Add Account</PageTitle>

<StatusMessage Message=@successMessage />

<div>
    <div class="col-md-8">
        <EditForm Model="Input" method="post" OnValidSubmit="AddNewUser" FormName="addUser">
            <DataAnnotationsValidator />
            <h2>Add a New User</h2>
            <hr />

            <ValidationSummary class="text-danger" role="alert"/>
            @if (!string.IsNullOrEmpty(errorMessage)) { <div align="center" style="margin-bottom:10px" class="text-danger">@errorMessage</div> }

            <div class="form-floating mb-3">
                <InputText @bind-Value="Input.Name" class="form-control" autocomplete="username" aria-required="true" placeholder="name" />
                <label for="name">Name</label>
            </div>

            <div class="form-floating mb-3">
                <InputText @bind-Value="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label for="email">Email</label>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Register user</button>
        </EditForm>
    </div>
</div>

@code {
    [SupplyParameterFromForm]
    private AddAccountModel Input { get; set; } = new();

    private string? errorMessage;

    private string? successMessage;

    private string? apiBaseUrl;

    protected override async Task OnInitializedAsync()
    {
        apiBaseUrl = Configuration["ApiBaseUrl"];
    }

    private async Task AddNewUser(EditContext editContext)
    {
        ApplicationUser user = CreateUser();
        user.Name = Input.Name;
        user.Email = Input.Email;

        var response = await HttpClient.PostAsJsonAsync($"{apiBaseUrl}/api/Snowflake/RegisterUser", user);
        if (!response.IsSuccessStatusCode)
        {
            errorMessage = await response.Content.ReadAsStringAsync();
            return;
        }

        Logger.LogInformation("Admin added a new user with one-time password.");
        successMessage = $"{Input.Name} has been added. An email containing a password reset link has been sent.";
        return;
    }

    private ApplicationUser CreateUser()
    {
        try
        {
            return Activator.CreateInstance<ApplicationUser>();
        }
        catch
        {
            throw new InvalidOperationException($"Can't create an instance of '{nameof(ApplicationUser)}'. " +
                $"Ensure that '{nameof(ApplicationUser)}' is not an abstract class and has a parameterless constructor.");
        }
    }

    private sealed class AddAccountModel
    {
        [Required]
        public string Name { get; set; } = "";

        [Required]
        [EmailAddress]
        [Display(Name = "Email")]
        public string Email { get; set; } = "";
    }
}
